<% layout('layouts/boilerplate') -%>
<!-- PAGE HEADER -->
<header>
	<div class="container">
		<div class="jumbotron jumbotron-fluid page-jumbotron">
		  	<div class="container">
		    	<h1 class="font-italic page-title">Contact Us</h1>
		    	<p class="lead">Want to talk to us? Send us a message and let's interact.</p>
		  	</div>
		</div>
	</div>
</header>
<!-- PAGE HEADER -->

<!-- MAIN SECTION START -->
<main
	id="main" 
	class="main container"
	tabindex="-1"
	role="main"
>
  	<div class="row"><!-- ROW -->
  		<!-- MAIN CONTENT START -->
    	<div class="col-md-8 main-content">
    		<h2 class="section-title">Send Us A Message</h2>
    		<!-- CONTACT FORM START -->
      		<form 
      			action="/contact" 
      			method="POST"
      			class="form" 
      		>
				<div class="form-group">
					<label for="username">Name</label>
					<input 
						type="text" 
						name="queryUsername"
						id="username" 
						class="form-control"
						maxlength="30" 
						pattern="[A-Za-z]{2,}" 
						title="Name must be a series of alphabetic characters only (min 2, max 30)."
						placeholder="John" 
						autofocus 
						required
					/>
				</div>

				<div class="form-group">
					<label for="email">Email</label>
					<input 
						type="email"
						name="queryEmail" 
						id="email"  
						class="form-control"
						maxlength="150"
						pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" 
						title="Email must follow this pattern: characters@characters.domain (should include '@' sign, '.' followed by atleast 2 characters)."
						placeholder="you@example.com" 
						required
					/>
				</div>

				<div class="form-group">
					<label for="alternateIdType">Subject</label>
					<select 
						name="querySubject" 
						id="alternateIdType" 
						class="form-control" 
						required 
					>
						<option disabled selected value>Choose...</option>
						<option value="General Enquiry">General Enquiry</option>
						<option value="Guest Posting">Guest Posting</option>
						<option value="Advertising">Advertising</option>
						<option value="Collaborating">Collaborating</option>
					</select>
				</div>

				<div class="form-group">
					<p class="label">Message</p>
					<textarea 
						name="queryMessage" 
						class="form-control"
						maxlength="1000" 
						pattern="[a-zA-Z\s0-9]{10,}" 
						title="Message can be a series of alphabetic and numeric characters only (min 10, max 1000)."
						rows="5"
						placeholder="Enter message"></textarea>
				</div>

				<div class="form-group">
					<div class="g-recaptcha" data-sitekey="6Ld1BMkZAAAAAEk27Mknol59PDilNDHYGKiV89Pf" required></div> <!-- RECAPTURE (CHANGE SITEKEY) -->
				</div>

				<div class="form-group">
					<button type="submit" class="btn form-btn">
						Send
					</button>
				</div>
			</form>
			<!-- CONTACT FORM END -->
    	</div>
    	<!-- MAIN CONTENT END -->

    	<!-- SIDEBAR START -->
    	<aside class="col-md-4 sidebar">
    		<% include ./partials/sidebar %>	
    	</aside>
		<!-- SIDEBAR END -->
  	</div><!-- ROW -->
</main>
<!-- MAIN SECTION END -->

<script>
	const posts = { features: <%- JSON.stringify(posts) %> };
</script>