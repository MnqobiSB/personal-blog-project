<% layout('layouts/boilerplate') -%>
<!-- PAGE HEADER -->
<header>
	<div class="container">
		<div class="jumbotron jumbotron-fluid page-jumbotron">
		  	<div class="container">
		    	<h1 class="font-italic page-title">Sign In</h1>
		    	<p class="lead">Welcome back! Cant wait to hear your thoughts on the article comments section.</p>
		  	</div>
		</div>
	</div>
</header>
<!-- PAGE HEADER -->

<!-- MAIN SECTION START -->
<main
	id="main" 
	class="main container"
	tabindex="-1"
	role="main"
>
  	<div class="row"><!-- ROW -->

  		<!-- MAIN CONTENT START -->
    	<div class="col-md-8 main-content">

    		<!-- SIGN-IN FORM START -->
    		<form  
				action="/sign-in" 
				method="POST"
				class="form" 
			>
				<div class="form-group">
					<label for="username">Username</label>
					<input 
						type="text"
						name="username"  
						id="username" 
						class="form-control"
						maxlength="30" 
						pattern="[A-Za-z]{2,}" 
						title="Username must be a series of alphabetic characters only (min 2, max 30)."
						placeholder="John" 
						required
						autofocus
					/>
				</div>

				<div class="form-group">
					<label for="password">Password</label>
					<input 
						type="password" 
						id="password" 
						name="password" 
						class="form-control"
						pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
						title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters" 
						placeholder="Password" 
						required
					/>
				</div>

				<div class="form-group">
					<div class="g-recaptcha" data-sitekey="6Ld1BMkZAAAAAEk27Mknol59PDilNDHYGKiV89Pf"></div><!-- RECAPTURE (CHANGE SITEKEY) -->
				</div>

				<div class="form-group">
					<button type="submit" class="btn form-btn">
						Sign In
					</button>
				</div>
			</form>
			<!-- SIGN-IN FORM START -->

			<div class="options">
				<div><a href="/forgot-password">Forgot Password?</a></div>
				<div>-- Or --</div>
				<div><a href="/sign-up">Sign Up Now!</a></div>
			</div>
    	</div>
    	<!-- MAIN CONTENT END -->

    	<!-- SIDEBAR START -->
    	<aside class="col-md-4 sidebar">
    		<% include ./partials/sidebar %>	
    	</aside>
    	<!-- SIDEBAR END -->

  	</div><!-- ROW -->
</main>
<!-- MAIN SECTION END -->

<script>
	const posts = { features: <%- JSON.stringify(posts) %> };
</script>