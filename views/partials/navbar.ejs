<header class="blog-header">
    <a class="skip-link" href="#main">Skip to main</a>
    <nav 
        class="navbar navbar-expand-lg fixed-top navbar-light" 
        aria-label="site">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img 
                    src="/images/logo.png" 
                    alt="Suburban Digi Hustle Logo"
                    class="logo"
                    title="Suburban Digi Hustle Logo"
                    loading="lazy" 
                /> 
            </a>
            <button 
                class="navbar-toggler" 
                type="button" 
                data-toggle="offcanvas">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
                <!-- search form -->
                <form 
                    class="form-inline ml-4 my-2 my-lg-0"
                    method="GET"
                    action="/blog"
                    role="search">
                    <input 
                        type="search"
                        name="search"
                        id="search-query" 
                        class="form-control mr-sm-2"  
                        placeholder="Search articles.." 
                        value="<%= typeof page !== 'undefined' && page === 'all-posts' ? query.search : '' %>"
                        aria-label="Search"
                        maxlength="100" 
                        pattern="[A-Za-z]{2,}" 
                        required
                        autofocus
                    />
                    <button 
                        class="btn search-btn my-2 my-sm-0" 
                        type="submit"><i class="fas fa-search"></i> Search
                    </button>
                </form>

                <!-- Nav links -->
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a  class="nav-link <%= typeof page !== 'undefined' && page === 'home' ? 'active' : '' %>" 
                            href="/">
                            Home <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a  class="nav-link <%= typeof page !== 'undefined' && page === 'all-posts' ? 'active' : '' %>" 
                            href="/blog">
                            Blog
                        </a>
                    </li>
                    <li class="nav-item">
                        <a  class="nav-link <%= typeof page !== 'undefined' && page === 'tools' ? 'active' : '' %>" 
                            href="/tools">
                            Tools
                        </a>
                    </li>
                    <li class="nav-item">
                        <a  class="nav-link <%= typeof page !== 'undefined' && page === 'about' ? 'active' : '' %>" 
                            href="/about">
                            About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a  class="nav-link <%= typeof page !== 'undefined' && page === 'contact' ? 'active' : '' %>" 
                            href="/contact">
                            Contact
                        </a>
                    </li>
                </ul>
                <!-- Sign Up Button -->
                <% if (!currentUser) { %>
                    <a  class="btn btn-alt mr-2" 
                        href="/sign-up"
                        role="button"
                    >
                        <i class="fas fa-user-plus"></i> Sign Up
                    </a>
                <% } %>
                <!-- Sign In Button -->
                <% if (!currentUser) { %>
                    <a 
                        class="btn" 
                        href="/sign-in" 
                        role="button"
                    >
                        <i class="icon fas fa-sign-in-alt"></i> Sign In
                    </a>
                <% } else { %>
                    <!-- Profile Dropdown -->
                    <div class="dropdown">
                        <button
                            type="button" 
                            id="dropdownMenuButton" 
                            class="btn dropdown-toggle" 
                            data-toggle="dropdown" 
                            aria-haspopup="true" 
                            aria-expanded="false">
                            <i class="icon fas fa-user"></i> <%= currentUser.username %>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <% if (currentUser.isAdmin) { %>
                                <a class="dropdown-item" href="/blog/new">
                                    <i class="icon fas fa-edit"></i> Create New Post
                                </a>
                                <a class="dropdown-item" href="/tools/new">
                                    <i class="icon fas fa-edit"></i> Create New Tool
                                </a>
                                <div class="dropdown-divider"></div>
                            <% } %>
                            <a class="dropdown-item" href="/profile">
                                <i class="icon fas fa-user"></i> Profile
                            </a>
                            <a class="dropdown-item" href="/sign-out">
                                <i class="icon fas fa-sign-out-alt"></i> Sign Out
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>
</header>

<section id="secondary-nav">
    <div class="nav-scroller container py-1 mb-2">
        <nav class="nav d-flex justify-content-between" aria-label="site">
            <a 
                class="p-2 text-gray category-nav  <%= typeof page !== 'undefined' && page === 'web-dev' ? 'active' : '' %>" 
                href="/blog/web-development"
            >
                <i class="icon fas fa-laptop-code"></i> Web Development
            </a>

            <a 
                class="p-2 text-gray category-nav  <%= typeof page !== 'undefined' && page === 'digital-marketing' ? 'active' : '' %>" 
                href="/blog/digital-marketing"
            >
                <i class="icon fas fa-mail-bulk"></i> Digital Marketing
            </a>
            <a 
                class="p-2 text-gray category-nav <%= typeof page !== 'undefined' && page === 'social-media' ? 'active' : '' %>" 
                href="/blog/social-media"
            >
                <i class="icon fas fa-hashtag"></i> Social Media
            </a>
            <a 
                class="p-2 text-gray category-nav <%= typeof page !== 'undefined' && page === 'software' ? 'active' : '' %>" 
                href="/blog/software"
            >
                <i class="icon fas fa-laptop"></i> Marketing Software
            </a>
            <a 
                class="p-2 text-gray category-nav <%= typeof page !== 'undefined' && page === 'make-money-online' ? 'active' : '' %>" 
                href="/blog/make-money-online"
            >
                <i class="icon fas fa-funnel-dollar"></i> Make Money Online
            </a>
        </nav>
    </div>
</section>