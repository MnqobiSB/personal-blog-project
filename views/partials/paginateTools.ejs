<div class="paginate" style="margin: 20px auto;">
	<nav aria-label="Page navigation">
	  	<ul class="pagination">
	  		<% if (tools.page - 1) { %>
				<li class="page-item">
		    		<a class="page-link" 
		    			href="<%= paginateUrl %><%= tools.page - 1 %>"
		    		>Prev</a>
		    	</li>
			<% } %>
	    	<% if (tools.pages > 1 && tools.docs.length) { %>
				<% for(let i = 1; i <= tools.pages; i++) { %>
					<li class="page-item">
						<a class="page-link" 
							href="<%= paginateUrl %><%= i %>"
							<%= i === tools.page ? 'style=color:#000;' : '' %>
						><%= i %></a>
			    	</li>	
				<% } %>
			<% } %>
			<% if ((tools.page + 1) <= tools.pages) { %>
				<li class="page-item">
		    		<a class="page-link" 
		    			href="<%= paginateUrl %><%= tools.page + 1 %>"
		    			>Next
		    		</a>
		    	</li>
			<% } %>
	  	</ul>
	</nav>
</div>