<% layout('layouts/boilerplate') -%>
<!-- MAIN SECTION START -->
<main
	id="main" 
	class="main container"
	tabindex="-1"
	role="main"
>
  	<div class="row"><!-- ROW -->
  		<!-- MAIN CONTENT START -->
    	<div class="col-md-8 main-content">
    		<!-- TOOL SECTION START -->
      		<section class="section">
      			<div class="card mb-3 show-main"><!-- TOOL CONTAINER -->
      				<% tool.images.forEach(function(image){ %>
						<img 
							src="<%= image.url %>" 
							class="card-img-top img-responsive single-blog-tool-image" 
							alt="<%= tool.title %>'s image" 
				          	title="<%= tool.title %>'s image"
				          	loading="lazy"
						>
					<% }) %>
					<div class="card-body">
		      			<article>
		      				<header class="blog-post-header">
				        		<h1 class="card-title page-title"><%= tool.title %></h1>
				        		<p>
									<% for(let i = 0; i < 5; i++) { %>
										<% if(i < floorRating) { %>
											<!-- display a full star -->
											<i class="fas fa-star"></i>
										<% } else if((tool.avgRating - i) > 0 && (tool.avgRating - i) < 1) { %>
											<!-- display a half star -->
											<i class="fas fa-star-half-alt"></i>
										<% } else { %>
											<!-- display and empty star -->
											<i class="far fa-star"></i>
										<% } %> 
									<% } %>
									<%= `${tool.avgRating} star${tool.avgRating === 1 ? '' : 's'}`  %> (<%= tool.toolReviews.length %>)
								</p>
				        		<p class="article-meta text-muted">
				        			<small><i class="far fa-calendar-alt"></i> <%= moment(tool.createdAt).format('MMMM DD, YYYY') %></small>
				        		</p>
				        		<small class="article-meta">
					        		<strong class="d-inline-block mb-2 text-primary">#<%= tool.category %></strong>
					        		<strong class="d-inline-block mb-2 text-success">#<%= tool.tag %></strong>
				        		</small>
							</header>

							<section class="blog-post-body">	
			        			<p><%- tool.description %></p>
					        </section>

					        <footer class="blog-post-footer">
					        	<p><%- tool.footer %></p>
					        </footer>

					        <!-- ADMIN BUTTONS -->
					        <div class="admin-buttons">
					        	<hr>
								<% if (currentUser && tool.author.equals(currentUser._id)) { %>
									<a class="float-right" href="/tools/<%= tool.id %>/edit">
										<button class="btn btn-sm btn-warning edit-tool-btn">
											<i class="fas fa-edit"></i> Edit tool
										</button>
									</a>
									<form 
										class="float-right" 
										action="/tools/<%= tool.id %>?_method=DELETE" 
										method="POST"
									>
										<button class="btn btn-sm btn-danger delete-post-btn">
											<i class="fas fa-trash"></i> Delete
										</button>
									</form>
								<% } %>
					        	<a href="/tools">Go Back</a>
					        </div>
					        <!-- ADMIN BUTTONS -->
				        </article>
			        </div>
		        </div><!-- TOOL CONTAINER -->
      		</section>
      		<!-- TOOL SECTION START -->

      		<!-- REVIEW SECTION START -->
      		<section class="review-card">
      			<div class="card">
      				<h2 class="card-header section-title">Reviews</h2>
				  	<div class="card-body comment-card-body">
				  		<!-- no reviews yet -->
				    	<% if (tool.toolReviews.length === 0) { %>
							<p><em class="no-comments">No reviews yet.</em></p>
						<% } %>

				    	<% tool.toolReviews.forEach(function(toolReview) { %>
				    		<!-- SHOW REVIEW -->
				    		<div class="media text-muted">
					    		<img 
					    			src="<%= toolReview.author.image.secure_url %>" 
					    			class="mr-2 rounded mt-2 review-author-img"
					    			alt="<%= toolReview.author.username %>'s profile image"
				          			title="<%= toolReview.author.username %>'s profile image"
				          			loading="lazy"
				          			width="40" 
									height="40" 
					    		/>

					    		<p class="media-body mb-0 lh-125">
					    			<strong class="d-block text-gray-dark username">
					    				<%= toolReview.author.username %> (<%=  `${toolReview.rating} star${toolReview.rating === 1 ? '' : 's'}` %>)
					    			</strong>
					    			<%= toolReview.body %>
					    		</p>

					    		<span class="pull-right small"><%= moment(toolReview.createdAt).fromNow() %></span>
					    	</div>
					    	<!-- SHOW REVIEW END-->

					    	<!-- EDIT REVIEW -->
							<% if (currentUser && toolReview.author.equals(currentUser._id)) { %>
								<div class="edit-review-container">
									<!-- edit button -->
									<button class="btn-sm edit-tool-btn toggle-edit-form mb-2">Edit</button>

									<!-- delete button -->
									<form 
										class="d-inline" 
										action="/tools/<%= tool.id %>/toolsReviews/<%= toolReview.id %>?_method=DELETE" 
										method="POST"
									>
										<button class="delete-tool-btn btn-sm" type="submit">Delete</button>
									</form>

									<!-- edit review form -->
									<form 
										action="/tools/<%= tool.id %>/toolsReviews/<%= toolReview.id %>?_method=PUT" 
										method="POST" 
										class="edit-comment-form"
									>	
										<div class="card edit-toolReview-card">
										  	<div class="card-body">
										    	<fieldset>
										    		<legend>Review:</legend>
													<div class="form-group">
														<label class="form-label visuallyHidden" for="edit-toolReview">Review:</label>
														<textarea 
															id="edit-toolReview"
															class="form-control"
															name="toolReview[body]" 
															rows="3" 
															required
														><%= toolReview.body %></textarea>
													</div>
												</fieldset>
												
												<fieldset class="starability-basic">
													<legend>Rating:</legend>
													<!-- <button class="clear-rating" type="button">Clear Rating</button> -->
													<input 
														type="radio" 
														id="edit-rate0" 
														class="input-no-rate stars" 
														name="toolReview[rating]" 
														value="0" 
														checked aria-label="No rating." 
													/>
													<input 
														type="radio" 
														id="edit-rate1"  
														name="toolReview[rating]" 
														value="1" 
													/>
													<label for="edit-rate1" class="stars" title="Terrible">1 star</label>
													<input 
														type="radio" 
														id="edit-rate2" 
														name="toolReview[rating]" 
														value="2" 
													/>
													<label for="edit-rate2" class="stars" title="Not good">2 stars</label>
													<input 
														type="radio" 
														id="edit-rate3"  
														name="toolReview[rating]" 
														value="3" 
													/>
													<label for="edit-rate3" class="stars" title="Average">3 stars</label>
													<input 
														type="radio" 
														id="edit-rate4" 
														name="toolReview[rating]" 
														value="4" 
													/>
													<label for="edit-rate4" class="stars" title="Very good">4 stars</label>
													<input 
														type="radio" 
														id="edit-rate5" 
														name="toolReview[rating]" 
														value="5" 
													/>
													<label for="edit-rate5" class="stars" title="Amazing">5 stars</label>
												</fieldset>
												
												<button class="btn btn-sm update-btn">Update</button>
										  	</div>
										</div>
									</form>
									<!-- edit review form -->
									<script>
										$('#edit-rate<%= toolReview.rating %>').prop('checked', true);
									</script>
								</div>
								<!-- EDIT REVIEW -->
							<% }; %>
							<hr>
						<% }); %>
						<!-- EDIT REVIEW -->

						<!-- CREATE REVIEW -->
						<% if (currentUser) { %>
							<!-- Button trigger modal -->
							<button 
								type="button" 
								class="btn btn-sm write-toolReview-btn" 
								data-toggle="modal" 
								data-target="#exampleModal"
							>
							  	Write a review
							</button>

							<!-- Modal -->
							<div 
								class="modal fade" 
								id="exampleModal" 
								tabindex="-1" 
								role="dialog" 
								aria-labelledby="exampleModalLabel" 
								aria-hidden="true"
							>
							  	<div class="modal-dialog">
							    	<div class="modal-content">
								      	<div class="modal-header">
								       	 	<h3 class="modal-title item-title" id="exampleModalLabel">Write a review</h3>

								        	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								          	<span aria-hidden="true">&times;</span>
								        	</button>
								      	</div>
								      	<div class="modal-body">
								        	<form action="/tools/<%= tool.id %>/toolsReviews" method="POST">
								        		<fieldset>
								        			<legend>Review:</legend>
									        		<div class="form-group">
														<label class="form-label visuallyHidden" for="write-toolReview">Review:</label>
									        			<textarea 
									        				id="write-toolReview" 
															class="form-control" 
									        				name="toolReview[body]"
									        				rows="3" 
									        				placeholder="Write a toolReview" 
									        				required></textarea>
									        		</div>
								        		</fieldset>
												
												<fieldset class="starability-basic">
													<legend>Rating:</legend>
													<!-- <button class="clear-rating" type="button">Clear Rating</button> -->
													<input 
														type="radio" 
														id="rate0" 
														class="input-no-rate" 
														name="toolReview[rating]" 
														value="0" 
														checked aria-label="No rating." 
													/>
													<input 
														type="radio" 
														id="rate1" 
														class="stars"
														name="toolReview[rating]" 
														value="1" 
													/>
													<label for="rate1" title="Terrible">1 star</label>
													<input 
														type="radio" 
														id="rate2" 
														class="stars"
														name="toolReview[rating]" 
														value="2" 
													/>
													<label for="rate2" title="Not good">2 stars</label>
													<input 
														type="radio" 
														id="rate3" 
														class="stars"
														name="toolReview[rating]" 
														value="3" 
													/>
													<label for="rate3" title="Average">3 stars</label>
													<input 
														type="radio" 
														id="rate4" 
														class="stars"
														name="toolReview[rating]" 
														value="4" 
													/>
													<label for="rate4" title="Very good">4 stars</label>
													<input 
														type="radio" 
														id="rate5" 
														class="stars"
														name="toolReview[rating]" 
														value="5" 
													/>
													<label for="rate5" title="Amazing">5 stars</label>
												</fieldset>
												<div class="modal-footer">
										        	<button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cancel</button>
										        	<button type="submit" class="btn btn-sm btn-primary">Submit</button>
										      	</div>
									      	</form>
									    </div>   	
							    	</div>
							  	</div>
							</div>
						<% } else { %>
							<a href="/login?returnTo=true">
								Create a review
							</a>
						<% } %>
						<!-- CREATE REVIEW -->
				  	</div>
				</div>	
      		</section>
      		<!-- REVIEW SECTION END -->
    	</div>
    	<!-- MAIN CONTENT END -->

    	<!-- SIDEBAR START -->
    	<aside class="col-md-4 sidebar">
    		<% include ../partials/sidebar %>	
    	</aside>
    	<!-- SIDEBAR END -->

  	</div><!-- ROW -->
</main>
<!-- MAIN SECTION END -->

<script>
	var tool = <%- JSON.stringify(tool) %>;
</script>

